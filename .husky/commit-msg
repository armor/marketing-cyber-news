#!/bin/sh

# Commit-msg hook: Validate conventional commit format
# Format: type(scope): description

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Conventional commit pattern
# Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert
pattern="^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\([a-zA-Z0-9_-]+\))?: .{1,72}"

# Allow merge commits
if echo "$commit_msg" | grep -qE "^Merge "; then
  exit 0
fi

# Allow revert commits
if echo "$commit_msg" | grep -qE "^Revert "; then
  exit 0
fi

# Validate commit message format
if ! echo "$commit_msg" | grep -qE "$pattern"; then
  echo "Invalid commit message format!"
  echo ""
  echo "Expected format: type(scope): description"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build, revert"
  echo ""
  echo "Examples:"
  echo "  feat(auth): add password reset flow"
  echo "  fix(api): handle null response from external service"
  echo "  docs: update README with deployment instructions"
  echo "  refactor(newsletter): extract email template logic"
  echo ""
  echo "Your message: $commit_msg"
  exit 1
fi

echo "Commit message format valid."
